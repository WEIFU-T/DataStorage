<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="账号:"
                android:id="@+id/textView" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="密码:"
                android:id="@+id/textView2" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText2" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/textview" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sharedPreferences写入"
        android:id="@+id/spRead"
        android:onClick="spWrite" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sharedPreferences读取"
        android:id="@+id/spWrite"
        android:onClick="spRead" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROM写入"
        android:id="@+id/romWrite"
        android:onClick="ROMWrite" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROM读取"
        android:id="@+id/romRead"
        android:onClick="ROMRead" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SD卡写入"
        android:id="@+id/SDWrite"
        android:onClick="SDWrite" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SD卡读取"
        android:id="@+id/SDRead"
        android:onClick="SDRead" />

</LinearLayout>